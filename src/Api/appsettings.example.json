  "ElasticsearchSettings": {
    "Nodes": ["http://localhost:9200"],
    "DefaultSize": 9999,
    "IsEnabled": false,
    "DefaultIndex": "default_index",
    "Password": "your_password",
    "Username": "your_username"
  },
  "DatabaseSettings": {
    "DatabaseConnection": "Host=localhost;Username=postgres;Password=1;Database=the_database"
  },
  "MemoryCacheSettings": {
    "DefaultExpirationInMinutes": 5
  },
  "LocalizationSettings": {
    "DefaultCulture": "vi",
    "SupportedCultures": ["en", "vi"],
    "TranslationCacheDurationInMinutes": 30
  },
  "IdentityCacheSettings": {
    "UserRoles": {
      "ExpirationInMinutes": 30
    },
    "RolePermissions": {
      "ExpirationInMinutes": 60
    },
    "UserPermissions": {
      "ExpirationInMinutes": 60
    }
  }
}
